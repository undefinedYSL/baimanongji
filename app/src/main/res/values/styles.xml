<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="s_true" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">#33da33</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="s_false" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">#9b9b9b</item>
        <item name="android:textSize">10sp</item>
    </style>


</resources>
