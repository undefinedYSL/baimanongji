            android:id="@+id/ringagain3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/contact_select_list_style"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:text="   帮助与反馈"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:drawableLeft="@drawable/bangzhu"/>

        <ImageView
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignRight="@+id/ringagain3"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:src="@drawable/home_index_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:padding="5dip" >

        <Button
            android:id="@+id/ringagain4"
